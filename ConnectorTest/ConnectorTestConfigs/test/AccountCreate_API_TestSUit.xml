<unit-test>
    <artifacts>
        <test-artifact>
            <artifact>/ConnectorTestConfigs/src/main/synapse-config/api/ConnectorTest_Contact_API.xml</artifact>
        </test-artifact>
        <supportive-artifacts/>
        <registry-resources/>
